@model TravelAgency.ViewModels.ManageUserRolesViewModel

@{
    ViewData["Title"] = "Manage User Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Manage User Roles</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Roles for @Model.UserEmail</h6>
        </div>
        <div class="card-body">
            <form asp-action="ManageUserRoles" method="post">
                <input type="hidden" asp-for="UserId" />

                @foreach (var role in Model.Roles)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="SelectedRoles" value="@role" @(Model.UserRoles.Contains(role) ? "checked" : "") />
                        <label class="form-check-label">@role</label>
                    </div>
                }

                <button type="submit" class="btn btn-primary mt-3">Update Roles</button>
            </form>
        </div>
    </div>
</div>
